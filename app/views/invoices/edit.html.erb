<h1>Edit Invoices</h1>

<%= form_for [@business, @invoice], action: :update do |f| -%>

  <%= f.label :amount, "Amount" %>
  <%= f.text_field :amount %>

  <%= f.label :due_date, "Due Date" %>
  <%= f.date_field :due_date %>

  <%= f.label :paid_date, "Paid Date" %>
  <%= f.date_field :paid_date %>

  <%= f.label :received_date, "Received Date" %>
  <%= f.date_field :received_date %>

  <%= f.label :payer_name, "Payer Name" %>
  <%= f.text_field :payer_name %>

  <%= f.label :receiver_name, "Receiver Name" %>
  <%= f.text_field :receiver_name %>

  <%= f.submit "Submit", class: "button radius expand"%>
<% end -%>
