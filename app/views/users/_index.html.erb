<h2>Upcoming Invoices for <%= @user.business.name %></h2>

<h3>Payable</h3>
<table>
  <thead>
    <tr>
      <th>Due</th>
      <th>Recipient</th>
      <th>Amount</th>
    </tr>
  </thead>
  <tbody>
<% @user.payable_invoices.order('due_date ASC').limit(5).each do |invoice| %>
  <tr onclick="document.location = '/businesses/<%= @user.business.id %>/invoices/<%= invoice.id %>';">
    <td><%= invoice.due_date %></td>
    <td><%= invoice.receiver.name %></td>
    <td>$<%= invoice.amount %></td>
  </tr>
<% end %>
</tbody>
</table>
<h3>Receivable</h3>
<table>
  <thead>
    <tr>
      <th>Due</th>
      <th>Payer</th>
      <th>Amount</th>
    </tr>
  </thead>
  <tbody>
<% @user.receivable_invoices.order('due_date ASC').limit(5).each do |invoice| %>
  <tr onclick="document.location = '/businesses/<%= @user.business.id %>/invoices/<%= invoice.id %>';">
    <td><%= invoice.due_date %></td>
    <td><%= invoice.receiver.name %></td>
    <td>$<%= invoice.amount %></td>
  </tr>
<% end %>
</tbody>
</table>
